<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.think.awhealth.ui.map.PeripheralMapActivity"
    tools:showIn="@layout/activity_peripheral_map"
    >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <RelativeLayout
        android:id="@+id/id_marker_ly"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/md_deep_orange_600"
        android:visibility="gone"
        android:orientation="vertical"
        android:clickable="true"
        >

        <ImageView
            android:id="@+id/id_infor_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="12dp"
            android:background="@drawable/img_border"
            android:scaleType="fitXY"
            android:src="@mipmap/a02"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#d84315"
            android:layout_marginBottom="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/id_infor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX医院"
                    android:textColor="#fff5eb"
                    />
                <TextView
                    android:id="@+id/id_infor_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX路xx"
                    />
                <TextView
                    android:id="@+id/id_infor_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距离200mi"
                    android:textColor="#fff5eb"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_telepthon"
                    android:clickable="true"
                    />

                <TextView
                    android:id="@+id/id_infor_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="(1234)1234456"
                    android:textSize="18sp"
                    android:textColor="#fff5eb"
                    />
            </LinearLayout>
            </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
